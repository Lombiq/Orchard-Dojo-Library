<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Orchard Core Content Part service registration</Title>
      <Shortcut>ocservcp</Shortcut>
      <Description>Code snippet for adding a content part service registration.</Description>
      <Author>Lombiq Technologies</Author>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>name</ID>
          <ToolTip>Name of the part.</ToolTip>
          <Default>My</Default>
        </Literal>
      </Declarations>
      <Imports>
        <Import>
          <Namespace>OrchardCore.ContentManagement</Namespace>
        </Import>
      </Imports>
      <Code Language="csharp">
        <![CDATA[services.AddContentPart<$name$Part>()$end$;]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>