<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Orchard Core Migrations class for content</Title>
      <Shortcut>occontentmigrations</Shortcut>
      <Description>Code snippet for a Migrations class that configures content types or content parts.</Description>
      <Author>Lombiq Technologies</Author>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>name</ID>
          <ToolTip>Name of the Migrations class.</ToolTip>
          <Default>My</Default>
        </Literal>
      </Declarations>
      <Imports>
        <Import>
          <Namespace>OrchardCore.ContentManagement.Metadata</Namespace>
        </Import>
        <Import>
          <Namespace>OrchardCore.Data.Migration</Namespace>
        </Import>
      </Imports>
      <Code Language="csharp">
        <![CDATA[public class $name$Migrations : DataMigration
        {
            private readonly IContentDefinitionManager _contentDefinitionManager;

            public $name$Migrations(IContentDefinitionManager contentDefinitionManager) =>
                _contentDefinitionManager = contentDefinitionManager;

            public int Create()
            {
                $end$
                
                return 1;
            }
        }]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>